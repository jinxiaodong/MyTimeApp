<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mtime_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.xiaodong.mytimeapp.business.home.location.MtimeLocationActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/category1_bg">
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/current_hot_city_header"/>


            <com.project.xiaodong.mytimeapp.frame.view.stickygridheaders.StickyGridHeadersGridView
                android:id="@+id/sgv_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="4">

            </com.project.xiaodong.mytimeapp.frame.view.stickygridheaders.StickyGridHeadersGridView>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
