<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="120dp"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:actualImageScaleType="fitXY"
            fresco:failureImage="@drawable/img_default"
            fresco:failureImageScaleType="fitXY"
            fresco:placeholderImage="@drawable/img_default"
            fresco:placeholderImageScaleType="fitXY"
            />

        <TextView
            android:id="@+id/tv_max_3d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_2dp"
            android:layout_marginTop="@dimen/padding_2dp"
            android:background="#99000000"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_3dp"
            android:paddingLeft="@dimen/padding_5dp"
            android:paddingRight="@dimen/padding_5dp"
            android:paddingTop="@dimen/padding_3dp"
            android:textColor="#99ffffff"
            android:textSize="10sp"
            android:visibility="invisible"
            />


        <TextView
            android:id="@+id/tv_mark"
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/color_669d0e"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_13sp"
            android:visibility="invisible"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_10dp"
        android:maxLength="7"
        android:singleLine="true"
        android:text="羞羞的铁拳"
        android:textColor="@color/gray_333333"
        android:textSize="@dimen/font_12sp"/>
</LinearLayout>